<ul class="media-links media-links-rounded">
  <% if user.email? %>
    <%= mail_to user.email do %>
      <i class="fa fa-envelope"></i>
    <% end %>
  <% end %>

  <% if user.fb? %>
    <%= link_to "https://www.facebook.com/#{user.fb}" do %>
      <i class="fa fa-facebook"></i>
    <% end %>
  <% end %>

  <% if user.twitter? %>
    <%= link_to "https://twitter.com/#{user.twitter}" do %>
      <i class="fa fa-twitter"></i>
    <% end %>
  <% end %>

  <% if user.linkedin? %>
    <%= link_to "https://www.linkedin.com/#{user.linkedin}" do %>
      <i class="fa fa-linkedin"></i>
    <% end %>
  <% end %>

  <% if user.github? %>
    <%= link_to "https://www.github.com/#{user.github}" do %>
      <i class="fa fa-github-alt"></i>
    <% end %>
  <% end %>
</ul>
