
  <section class="main-container">
  <div class="container">

    <div class="underlined-headline hide">
      <h2>We're located in 31 cities!</h2>
      <hr>
      <p class="subtitle hide">Don't see your hometown? <a href="">Start a new chapter!</a></p>
    </div>

    <section class="state-index hide">
      <% @states.each do |s| %>
        <div class="state-container">
          <div class="state"><%= image_tag(image_route(s[0])) %></div>
          <hr>
          <h2><%= s[0] %></h2>
          <% s[1].each do |l| %>
            <h3 class="large"><%= link_to l, location_path(l.parameterize) %></h3>
          <% end %>
        </div>
    <% end %>
    </section>

    <section id="state-list">
      <div class="accordion show">
        <% @states.each do |s| %>
          <section class="hidden">
            <h2><%= s[0] %></h2>
            <ul>
              <% s[1].each do |l| %>
                <li><h3><%= link_to l, location_path(l.parameterize) %><h3></li>
              <% end %>
            </ul>
          </section>
        <% end %>
      </div>
    </section>
  </div>
  </section>
